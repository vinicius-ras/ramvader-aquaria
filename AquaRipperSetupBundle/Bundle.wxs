<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
     xmlns:bal="http://schemas.microsoft.com/wix/BalExtension">
	<Bundle Name="AquaRipper Trainer" Version="1.0.0" Manufacturer="Vinicius.RAS" UpgradeCode="C2C162BA-374B-459A-9A11-937ADA6F272F"
          IconSourceFile="$(var.AquaRipper.ProjectDir)media\icon.ico"
          DisableModify="yes">
    <!-- Configure to use Wix Toolset's standard bootstrapper application for installing the chain of packages. -->
    <BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.RtfLargeLicense">
      <bal:WixStandardBootstrapperApplication LicenseFile="$(var.AquaRipper.ProjectDir)docs\License.rtf"
                                              LogoFile="$(var.ProjectDir)media\icon64x64.png" />
    </BootstrapperApplicationRef>

    <!-- Chain of packages to be installed. -->
		<Chain>
      <!-- Install the necessary .NET Framework before installing the trainer. -->
      <PackageGroupRef Id="NetFx45Web"/>
      
      <!-- Install the package generated by the "AquaRipperSetupMSI" project. -->
      <MsiPackage SourceFile="$(var.AquaRipperSetupMSI.TargetPath)" DisplayInternalUI="yes" />
		</Chain>
	</Bundle>
</Wix>